PORT=3001
NODE_ENV=development

# Allowed origin for CORS (set to your frontend URL on Vercel)
# Comma-separated list of allowed origins for CORS
# Supports exact matches and wildcard subdomains with '*.' prefix
# Examples:
# CORS_ORIGINS=http://localhost:5173,https://dashboard-agent-v2.vercel.app,*.vercel.app
CORS_ORIGINS=http://localhost:5173

# External data API base URL
DATABASE_API_URL=https://serverless-twg8.vercel.app

# Required for AI chat (DeepSeek)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Email (SMTP) â€” required to send reports
SMTP_HOST=smtp.yourmail.com
SMTP_PORT=587
SMTP_USER=your-user
SMTP_PASS=your-pass
SMTP_SECURE=0
EMAIL_FROM=Inventory Bot <noreply@yourmail.com>
EMAIL_TO=ops@yourcompany.com,scm@yourcompany.com

# Cron security (optional)
CRON_SECRET=your-cron-secret

# Safety Stock policy overrides (optional)
SS_SERVICE_LEVEL=0.95
SS_LEAD_TIME_DAYS=7
SS_MAX_CHANGE_PERCENT=20
SS_ROUND_TO_PACK=
SS_MIN_SAFETY_STOCK=0
